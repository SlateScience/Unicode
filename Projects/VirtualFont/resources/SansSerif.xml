<?xml version="1.0" encoding="utf-8"?>
<!--
 Testing Android fonts on the desktop
 -->
<VirtualFont>
    <!-- Undefined -->
    <Set>
        <Ref>assets://fonts/DroidSans.ttf</Ref>
        <Ref>assets://fonts/DroidSansFallback.ttf</Ref>
    </Set>
    <!-- Arabic, Persian -->
    <Set lang="ar:fa">
        <Group>
            <Ref>assets://fonts/DroidNaskh-Regular.ttf</Ref>
            <Ref>assets://fonts/DroidKufi-Regular.ttf</Ref>
            <Ref>assets://fonts/DroidSansArabic.ttf</Ref>
        </Group>
        <Ref>assets://fonts/DroidSansFallback.ttf</Ref>
    </Set>
    <!-- Bulgarian, Russian, Ukrainian -->
    <Set lang="bg:ru:uk">
        <Ref>assets://fonts/DroidSans.ttf</Ref>
        <Ref>assets://fonts/DroidSansFallback.ttf</Ref>
    </Set>
    <!-- Greek -->
    <Set lang="el">
        <Ref>assets://fonts/DroidSans.ttf</Ref>
        <Ref>assets://fonts/DroidSansFallback.ttf</Ref>
    </Set>
    <!-- Hebrew, Yiddish -->
    <Set lang="he:yi">
        <Ref>assets://fonts/DroidSansHebrew-Regular.ttf</Ref>
        <Ref>assets://fonts/DroidSansFallback.ttf</Ref>
    </Set>
    <!-- Japanese -->
    <Set lang="ja">
        <Ref>assets://fonts/MTLmr3m.ttf</Ref>
        <Ref>assets://fonts/DroidSansFallback.ttf</Ref>
    </Set>
    <!-- Korean -->
    <Set lang="ko">
        <Ref>assets://fonts/NanumGothic.ttf</Ref>
        <Ref>assets://fonts/DroidSansFallback.ttf</Ref>
    </Set>
    <!-- Thai -->
    <Set lang="th">
        <Ref>assets://fonts/DroidSansThai.ttf</Ref>
        <Ref>assets://fonts/DroidSansFallback.ttf</Ref>
    </Set>
    <!-- Hindi -->
    <Set lang="hi">
        <Ref>assets://fonts/DroidSansDevanagari-Regular.ttf</Ref>
        <Ref>assets://fonts/DroidSansFallback.ttf</Ref>
    </Set>
    <!-- Chinese (Simplified, Traditional) -->
    <Set lang="zh-cn:zh-hk:zh-sg:zh-mo:zh-tw">
        <Ref>assets://fonts/DroidSansFallback.ttf</Ref>
    </Set>
</VirtualFont>
