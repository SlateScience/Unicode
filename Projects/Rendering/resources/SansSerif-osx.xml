<VirtualFont>
    <!-- Undefined -->
    <Set>
        <Ref>file:///Library/Fonts/Arial.ttf</Ref>
    </Set>
    <!-- Arabic, Persian -->
    <Set lang="ar:fa">
        <Ref>file:///System/Library/Fonts/Geeza Pro.ttf</Ref><!-- NOT IDEAL: PUNCTUATION AND NUMBERS ARE MISSING -->
        <Ref>file:///Library/Fonts/Arial.ttf</Ref>
    </Set>
    <!-- Hebrew, Yiddish -->
    <Set lang="he:yi">
        <Ref>file:///Library/Fonts/ArialHB.ttf</Ref>
    </Set>
    <!-- Japanese -->
    <Set lang="ja">
        <Ref>file:///Library/Fonts/Hiragino Sans GB W3.otf</Ref>
    </Set>
    <!-- Korean -->
    <Set lang="ko">
        <Ref>file:///System/Library/Fonts/AppleSDGothicNeo-Regular.otf</Ref>
    </Set>
    <!-- Thai -->
    <Set lang="th">
        <Ref>file:///System/Library/Fonts/Thonburi.ttf</Ref>
    </Set>
    <!-- Hindi -->
    <Set lang="hi">
        <Ref>file:///Library/Fonts/Devanagari Sangam MN.ttc</Ref>
    </Set>
    <!-- Chinese (Simplified, Traditional) -->
    <Set lang="zh-cn:zh-hk:zh-sg:zh-mo:zh-tw">
        <Ref>file:///System/Library/Fonts/STHeiti Medium.ttc</Ref>
    </Set>
</VirtualFont>
